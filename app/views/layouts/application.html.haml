!!! 5
%html
  %head
    %title ¡Calcula Cuantos Tickets!
    
    = stylesheet_link_tag 'bootstrap.min'
    = stylesheet_link_tag 'signin'

  %body
    .container      
        
      = form_tag tickets_path, class: 'form-signin' do
	  
        %h2.form-signin-heading ¿Cuantos Tickets de cada?

        = number_field :ticket, 'cuantos', :step => 0.01, :value => @amtf, :id => "input", class: 'input-block-level'

        = button_tag "¿Cuantos?", class: 'btn btn-large btn-primary btn-block'

        = yield
